{
  "include": [
    "src"
  ],
  "exclude": [
    "src/**/__tests__/**",
  ],
  "compilerOptions": {
    "declaration": true,
    "sourceMap": true,
    "module": "commonjs",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "target": "es2015",
    "lib": [
      "dom",
      "es2015"
    ],
    "outDir": "./dist",
    "alwaysStrict": true,
    "moduleResolution": "node"
  }
}
